<MudDialog>
    <DialogContent>
        <MudStack Row="true">
            <MudPaper MaxWidth="250" MaxHeight="300">
                <MudImage Width="250" Height="300" Src="@DisplayUrl" ObjectFit="ObjectFit.Contain"></MudImage>
            </MudPaper>
            <MudStack>
                <MudPaper>
                    <MudTextField T="string" @bind-Value="InputUrl" Label="Image Url" Error="@(InputUrlError != null)" ErrorText="@InputUrlError"></MudTextField>
                </MudPaper>
                <MudButton OnClick="OnApplyUrlClick">Apply Url</MudButton>
                <MudButton OnClick="OnUploadClick">@Resources.Dialog_Button_Upload</MudButton>
            </MudStack>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnOk">@Resources.Dialog_Button_Ok</MudButton>
        <MudButton OnClick="OnCancel">@Resources.Dialog_Button_Cancel</MudButton>
    </DialogActions>
</MudDialog>