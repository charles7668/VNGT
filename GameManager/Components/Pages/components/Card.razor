@inherits MudComponentBase

<MudCard @attributes="UserAttributes!" Style="@Style" Class="@Class">
    <MudCardContent Class="d-flex flex-column">
        <MudImage Src="@ImageSrc" loading="lazy" Alt="No Image" ObjectFit="ObjectFit.Contain"/>
        <MudSpacer></MudSpacer>
        <MudText Typo="Typo.caption">@GameInfo?.GameName</MudText>
        <MudToolBar Class="pa-0">
            <MudButton StartIcon="@Icons.Material.Filled.ArrowRight">Run</MudButton>
            <MudSpacer></MudSpacer>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert">
                <MudButton OnClick="OnEdit" Variant="Variant.Text" Color="Color.Primary" FullWidth="true">Edit</MudButton>
                <MudButton OnClick="OnOpenInExplorer" Variant="Variant.Text" Color="Color.Primary" FullWidth="true">Open in Explorer</MudButton>
                <MudDivider/>
                <MudButton OnClick="OnDelete" Variant="Variant.Text" Color="Color.Secondary" FullWidth="true">Delete</MudButton>
            </MudMenu>
        </MudToolBar>
    </MudCardContent>
</MudCard>

<style>
    .mud-card {
        width: @Width;
        height: @Height;
        overflow: hidden;
        max-height: 100%;
    }
    .mud-card .mud-card-content {
        height: 100%;
        max-height: 100%;
    }
    .mud-card .mud-card-content img {
        max-height: 80%;
        object-fit: cover;
    }
    .mud-card .mud-card-content .mud-text {
        height: 50px;
    }
</style>